<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="34dp">


        <at.markushi.ui.CircleButton
            android:id="@+id/jbtnInfoFanta"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/jbtnFanta"
            android:layout_toEndOf="@+id/textView"
            android:src="@android:drawable/ic_menu_info_details"
            app:cb_color="@android:color/holo_blue_dark" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Bebidas"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/jbtnSprite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/jbtnCoca"
            android:layout_marginEnd="43dp"
            app:srcCompat="@drawable/sprite" />

        <at.markushi.ui.CircleButton
            android:id="@+id/jbtnInfoSprite"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/jbtnSprite"
            android:layout_marginStart="-43dp"
            android:layout_toEndOf="@+id/jbtnSprite"
            android:src="@android:drawable/ic_menu_info_details"
            app:cb_color="@android:color/holo_blue_dark" />

        <at.markushi.ui.CircleButton
            android:id="@+id/jbtnInfoCoca"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/jbtnSprite"
            android:layout_toStartOf="@+id/textView"
            android:src="@android:drawable/ic_menu_info_details"
            app:cb_color="@android:color/holo_blue_dark" />

        <ImageButton
            android:id="@+id/jbtnCoca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="43dp"
            android:layout_marginTop="86dp"
            app:srcCompat="@drawable/coca" />

        <ImageButton
            android:id="@+id/jbtnFanta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="86dp"
            app:srcCompat="@drawable/fanta" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="253dp"
            android:fontFamily="@font/emblema_one"
            android:text="Coca-Cola"
            android:textColor="?attr/colorError"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView5"
            android:layout_marginEnd="52dp"
            android:fontFamily="@font/emblema_one"
            android:text="Sprite"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="49dp"
            android:fontFamily="@font/emblema_one"
            android:text="Fanta"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/jbtnSprite"
            android:layout_alignEnd="@+id/jbtnSprite"
            android:text="Costo: $14.00" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/jbtnInfoFanta"
            android:layout_centerHorizontal="true"
            android:text="Costo: $12.00" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/jbtnSprite"
            android:layout_toStartOf="@+id/jbtnInfoCoca"
            android:text="Costo: $16.00" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>