<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/jetDirIP"
            android:layout_alignParentStart="true"
            android:layout_marginStart="26dp"
            android:fontFamily="@font/allerta"
            android:text="Dir. IP:"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="92dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Cambiar ConexiÃ³n"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/jetDirIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/jbtnGuardarConexion"
            android:layout_marginTop="81dp"
            android:ems="10"
            android:fontFamily="@font/allerta"
            android:inputType="text"
            tools:layout_editor_absoluteX="104dp"
            tools:layout_editor_absoluteY="73dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/jetPuerto"
            android:layout_alignStart="@+id/textView2"
            android:fontFamily="@font/allerta"
            android:text="Puerto:"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="223dp" />

        <EditText
            android:id="@+id/jetPuerto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/jetDirIP"
            android:layout_centerVertical="true"
            android:ems="10"
            android:fontFamily="@font/allerta"
            android:inputType="numberSigned"
            tools:layout_editor_absoluteX="104dp"
            tools:layout_editor_absoluteY="191dp" />

        <Button
            android:id="@+id/jbtnGuardarConexion"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="92dp"
            android:fontFamily="@font/allerta"
            android:text="Guardar"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="378dp" />
    </RelativeLayout>
</RelativeLayout>